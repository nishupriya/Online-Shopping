        <url-pattern>/BuyNow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetSequence</servlet-name>
        <url-pattern>/ResetSequence</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
